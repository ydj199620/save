/* pages/music/music-detail/music-detail.wxss */
@import "comment-template/comment-template.wxss";
.container{
  display: flex;
  flex-direction: column;
}
.head_img{
  width: 100%;
  height: 350rpx;
}
.author{
  display: flex;
  flex-direction: row;
  margin: 30rpx 30rpx 0;
}
.author>text{
  margin-left: 30rpx;
  line-height: 60rpx;
}
.data{
  color: #666;
  font-size: 25rpx;
}
.author>image{
  width: 50rpx;
  height: 50rpx;
  vertical-align: middle;
}
.author>image:last-child{
  margin-left: 30rpx;
}
.title{
  margin-left: 35rpx;
  font-size: 35rpx;
  font-weight: 700;
  margin-top: 30rpx;
  letter-spacing: 10rpx;
  color: #4b556c;
}
.tool{
  margin-top: 20rpx;
}
.tool>image{
  width: 50rpx;
  height: 50rpx;
  float: right;
  margin-right: 40rpx;
}
.text_detail{
  font-size: 26rpx;
  margin: 20rpx 30rpx 0 30rpx;
  line-height: 44rpx;
  letter-spacing: 5rpx;
  color:#666;
}

.comment{
    padding: 20rpx;
    margin-top: 20rpx;
}

.commentblock{
    border-left: 10rpx solid #F68344;
    padding-left: 20rpx;
}
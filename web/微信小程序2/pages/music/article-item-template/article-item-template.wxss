.articleitem{
  display: flex;
  flex-direction: column;
  margin:25rpx 0;
  border-top: 1px solid #ededed;
  border-bottom: 1px solid #ededed;
  background-color: white;
  padding: 0 15rpx;
}
.message{
  margin: 20rpx 0;
}
.message>image{
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
}
.auther{
  margin-left: 30rpx;
}
.data{
  margin-left: 30rpx;
  font-size: 30rpx;
}
.title{
  font-size: 35rpx;
  font-weight: 700;
  margin-bottom: 10rpx;
}
.articleimg{
  width: 100%;
  height: 300rpx;
  margin-bottom: 20rpx;
}
.articletext{
  font-size: 28rpx;
  line-height: 40rpx;
  letter-spacing: 2rpx;
  color: #666;
  margin-bottom: 20rpx;
}
.articlebottom{
  display: flex;
  flex-direction: row;
}
.articlebottom>image{
  width: 30rpx;
  height: 30rpx;
  vertical-align: middle;
  margin-right: 10rpx;
}
.articlebottom>text{
  font-size: 26rpx;
  margin-right: 40rpx;
  line-height: 30rpx;
  margin-bottom: 30rpx;
}